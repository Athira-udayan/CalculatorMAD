<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

       <EditText
           android:id="@+id/edt"
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:hint="0"
           android:textColorHint="#685656"
           android:textSize="50dp">

       </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/bt1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/btAdd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
           >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/bt4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="4"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="5"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="6"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/btSub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/bt7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="7"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="8"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="9"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/btMul"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="*"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/btdot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="."
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
        <Button
            android:id="@+id/bt0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>

        <Button
            android:id="@+id/btC"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="CL"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/btDiv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="/"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btEq"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20dp">
        </Button>
    </LinearLayout>
</LinearLayout>